<div class="col-md-12">
    <form id="search-form" role="search" asp-controller="Search">
        <div class="input-group add-on">
            <input class="form-control" placeholder="Search for a manufacturer or model..." id="query" name="query" type="text" value="@(ViewData["Query"] != null  ? (string) ViewData["Query"] : "")">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>