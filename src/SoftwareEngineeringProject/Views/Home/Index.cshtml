@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/filter.css" />
<link rel="stylesheet" href="~/css/homepage.css" />

<div class="row">
    <h2>Find a Phone</h2>
    <hr />
    <div class="col-md-12">
        <form id="search-form" role="search" asp-controller="Search">
            <div class="input-group add-on">
                <input class="form-control" placeholder="Search for a manufacturer or model..." id="query" name="query" type="text">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <h2>Featured Phones</h2>
    <hr />
    @foreach (PhoneModel phoneModel in ViewBag.FeaturedModels)
    {
        <div class="col-md-3 featured-phone">
            <a href="/Phone/@phoneModel.PhoneModelID">
                <img src="@phoneModel.Phones.First().ImageURL" />
                <h4>@phoneModel.PhoneModelID</h4>
            </a>
        </div>
    }
</div>